doctype html
html
  head
    title=title
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:500,700|Roboto:400,500,700,900")
    link(rel="stylesheet" href='/style.css')
  body.js-body
    div.container
      form.view.js-join
        img.logo(src='https://upload.wikimedia.org/wikipedia/fr/7/72/Burger_Quiz.png')
        h2="Remote Quiz @ Ippon"
        div.container
          if users.length == 0
            h2.js-active=`Aucun joueur `
          else if users.length == 1
            h2.js-active=`1 joueur`
          else if users.length > 1
            h2.js-active=`${users.length} joueurs`
          table(style='width:100%', border='1')
              tr
                th.mayo Mayo
                th.ketchup Ketchup
              tr
                td.mayo.usersInMayo
                td.ketchup.usersInKetchup
        input(type='text' name='name' placeholder='Votre pseudo' required='required')
        input(type='radio' name='team' value='Mayo' required='required' id='mayo-cb')
        label(for='mayo-cb') Mayo
        input(type='radio' name='team' value='Ketchup' required='required' id='ketchup-cb')
        label(for='ketchup-cb') Ketchup
        button(type='submit')='Rejoindre !'

      div.view.js-joined.hidden
        button.js-buzzer.buzzer()='Buzzer !'
        p.js-joined-info=""
        button.js-edit.secondary='Changer d\'Ã©quipe'

    script(src='/socket.io/socket.io.js')
    script(src='/join.js')
